        <bundle>mvn:org.opendaylight.tsdr/${artifactName}-dataquery/${project.version}</bundle>
        <configfile finalname="${config.configfile.directory}/155-TSDR-dataquery-config.xml">mvn:org.opendaylight.tsdr/${artifactName}-dataquery/${project.version}/xml/config</configfile>
    </feature>

